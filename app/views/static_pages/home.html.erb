<body>
  <h1>Image Cache Test</h1>
  <p>This image will be cached</p>
  <div>

<% if !@micropost.nil? %>
  <table id="micropost_table">
    <tr>
      <td id="micropost_text">
        <%= @micropost.content %>
      </td>
    </tr>
    <tr>
      <td>
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
      </td>
    </tr>
    <tr>
      <td>
        <span id="micropost_updated_at">
          Updated <%= time_ago_in_words(@micropost.updated_at) %> ago.
        </span> 
        (<%= @micropost.updated_at %>)
      </td>
    </tr>
  </table>
  
  <%= link_to 'Edit', edit_micropost_path(@micropost) %>
<% end %>

  </div>

</body>
